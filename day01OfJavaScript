//Challenge Days Left for current age till 90

function lifeInWeeks(age) {
    
/************Don't change the code above************/    
    
    //Write your code here.
  var yearsLeft=90-age;
  var days=yearsLeft*365;
  var weeks=yearsLeft*52;
  var months=yearsLeft*12;
  console.log("You have "+days+" days,"+weeks+" weeks and"+months+"months");
  
    
    
    
    
    
/*************Don't change the code below**********/
}
lifeInWeeks(12);

//Challenge BMI calculator

function bmiCalculator(weight,height)
{
     var bmi=(weight)/(height*height);
     return Math.floor(bmi);
    
}
var output=bmiCalculator(65,1.8);
console.log(output);




